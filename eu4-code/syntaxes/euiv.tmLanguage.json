{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EUIV Code",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#high-level-scopes"
		},
		{
			"include": "#scopes"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#dates"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.euiv",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.euiv",
					"match": "\\\\"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"end": "\\n",
					"name": "comment.line.number-sign.euiv"
				}
			]
		},
		"reserved-words": {
			"patterns": [{
				"name": "constant.character.euiv",
				"match": "(?i:\\b(YES|NO|ROOT|FROM)\\b)"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.euiv",
				"match": "\\="
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.less.euiv",
				"match": "(?i:\\b(if|limit|elseif|else|while|NOT|AND|OR)\\b)"
			}]
		},
		"high-level-scopes": {
			"patterns": [{
				"name": "entity.name.class.highlevel.euiv",
				"match": "\\b(?i:country_decisions|potential|provinces_to_highlight|allow|effect|ai_will_do)\\b(?=[ ]*\\=[ ]*(?:\\{|$))"
			}]
		},
		"scopes": {
			"patterns": [{
				"name": "variable.name.scope.euiv",
				"match": "\\b(\\w+)\\b(?=[ ]*\\=[ ]*(?:\\{|$))"
			}]
		},
		"commands": {
			"patterns": [{
				"name": "entity.name.function.euiv",
				"match": "\\b(\\w+)\\b(?=[ ]*\\=)(?![ ]*(?:\\{|$))"
			}]
		},
		"tags": {
			"patterns": [{
				"name":"support.class.tags.euiv",
				"match": "\\b([A-Z]{3})\\b"
			}]
		},
		"dates": {
			"patterns": [{
				"name": "entity.name.class.date.euiv",
				"match": "^[0-9]{4}\\.1?[0-9]\\.[1-3]?[0-9](?!\\d)"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.euiv",
				"match": "(?<=^|\\s)[-]?\\d+(\\.\\d+)?(?=$|\\s)"
			}]
		}
	},
	"scopeName": "source.euiv"
}
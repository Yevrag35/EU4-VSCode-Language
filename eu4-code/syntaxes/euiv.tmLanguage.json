{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EUIV Code",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#dates"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#scopes"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"end": "\\n",
					"name": "comment.line.number-sign.euiv"
				}
			]
		},
		"reserved-words": {
			"patterns": [{
				"name": "constant.character.euiv",
				"match": "(?<=^|\\s)(yes|no)(?=$|\\s)"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.euiv",
				"match": "\\="
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.euiv",
				"match": "(?i:\\b(if|while|NOT|AND|OR)\\b)"
			}]
		},
		"commands": {
			"patterns": [{
				"name": "entity.name.function.euiv",
				"match": "(\\w+)\\s\\=\\s(?!\\{)"
			}]
		},
		"tags": {
			"patterns": [{
				"name":"support.class.tags.euiv",
				"match": "(?<!\\w)[A-Z]{3}(?!\\w)"
			}]
		},
		"strings": {
			"name": "string.quoted.double.euiv",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.euiv",
					"match": "\\\\"
				}
			]
		},
		"dates": {
			"patterns": [{
				"name": "entity.name.class.date.euiv",
				"match": "^[0-9]{4}\\.1?[0-9]\\.[1-3]?[0-9](?!\\d)"
			}]
		},
		"scopes": {
			"patterns": [{
				"name": "variable.name.scope.euiv",
				"match": "(\\w+)\\s\\=\\s(?=\\{)"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.euiv",
				"match": "(?<=^|\\s)\\d+(\\.\\d+)?(?=$|\\s)"
			}]
		}
	},
	"scopeName": "source.euiv"
}
{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EUIV Code",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#high-level-scopes"
		},
		{
			"include": "#scopes"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#dates"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.euiv",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.euiv",
					"match": "\\\\"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"end": "\\n",
					"name": "comment.line.number-sign.euiv"
				}
			]
		},
		"reserved-words": {
			
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.euiv",
				"match": "\\="
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.less.euiv",
				"match": "(?i:\\b(if|limit|elseif|else|while|NOT|AND|OR|yes|no)\\b)"
			}]
		},
		"high-level-scopes": {
			"patterns": [{
				"name": "entity.name.class.highlevel.euiv",
				"match": "\\b(?i:abilities|absolutism|after|ai_priority|ai_weight|ai_will_do|allow|attacker_disabled_po|build_trigger|can_start|chance|country_decisions|country_event|dynasty_names|effect|female_names|global_modifiers|immediate|major_trigger|male_names|mean_time_to_happen|modifier|objectives|on_built|on_destroyed|on_obsolete|option|picture|prerequisites|potential|potential_on_load|province_event|province_modifiers|provinces_to_highlight|required_missions|rule|skill_scaled_modifier|state_modifiers|trigger)\\b(?=[ ]*\\=[ ]*(?:\\{|$))"
			}]
		},
		"scopes": {
			"patterns": [{
				"name": "variable.name.scope.euiv",
				"match": "\\b(\\w+)\\b(?=[ ]*\\=[ ]*(?:\\{|$))"
			}]
		},
		"tags": {
			"patterns": [{
				"name":"constant.character.euiv",
				"match": "\\b([A-Z]{3}|FROM|ROOT)\\b"
			}]
		},
		"commands": {
			"patterns": [{
				"name": "entity.name.function.euiv",
				"match": "\\b(\\w+)\\b(?=[ ]*\\=)(?![ ]*(?:\\{|$))"
			}]
		},
		"dates": {
			"patterns": [{
				"name": "entity.name.class.date.euiv",
				"match": "^[0-9]{4}\\.1?[0-9]\\.[1-3]?[0-9](?!\\d)"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.euiv",
				"match": "(?<=^|\\s)[-]?\\d+(\\.\\d+)?(?=$|\\s)"
			}]
		}
	},
	"scopeName": "source.euiv"
}